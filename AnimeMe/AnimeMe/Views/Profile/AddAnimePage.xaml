<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeMe.Views.Profile.AddAnimePage">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="Add Anime"
                FontSize="30"
                HorizontalOptions="CenterAndExpand"
                Margin="30"/>

            <Entry x:Name="English"
                   Placeholder="Anime English Title" 
                   TextColor="Black"
                   PlaceholderColor="LightGray"/>

            <Entry x:Name="Japanese"
                   Placeholder="Anime Original Title" 
                   TextColor="Black"
                   PlaceholderColor="LightGray"/>

            <Entry x:Name="Released"
                   Placeholder="Release Date" 
                   TextColor="Black"
                   PlaceholderColor="LightGray"/>

            <Button
                Text="Submit Anime"
                Clicked="OnAnimeSubmit"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>